<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/primaryborder"
    android:padding="10dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/posttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/publishername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:text="gogo " />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="1dp"
        android:background="@color/primaryhint"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postbodytv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:maxLength="120"
            android:textSize="12dp"
            android:hint="post...."
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="1dp"
        android:background="@color/primaryhint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publishercity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="toon pur"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/posttimeadded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:textSize="10dp"
            android:layout_weight="1"
            android:text="11/02/2022 at 11 59" />


    </LinearLayout>



</LinearLayout>




















